@model Jogador

@{
    ViewData["Title"] = "Login";
}

<!-- FORMULÁRIO DE LOGIN -->
<main class="fundo-login">
    <div class="bkg-login">
        <form class="frm-login" method="post" action="@Url.Action("Logar")">
            <div class="login-title">
                <hr class="login-line">
                <h1>Login</h1>
            </div>
            <div class="frm-linha">
                <div class="bkg-input">
                    <img src="~/assets/vector-user.svg" alt="ícone de usuário">
                    <input type="email" id="email" name="Email" placeholder="Digite seu e-mail:">
                </div>
            </div>
            <div class="frm-linha">
                <div class="bkg-input">
                    <img src="~/assets/vector-key.svg" alt="ícone de chave">
                    <input type="password" id="password" name="Senha" placeholder="Digite sua senha:">
                </div>
            </div>

            <button type="submit" class="btn-logar">Logar</button>
        </form>
    </div>

</main>

