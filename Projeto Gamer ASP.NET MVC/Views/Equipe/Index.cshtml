@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipe.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">
        
        
        <form action="" class="frm-cad-equipe" method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" style="display:flex; gap:20px">
            <div class="cadequipe-titulo">
                <h1>Cadastro de Equipes</h1>
                <hr>
            </div>

            @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
            <input class="campo-entrada" type="text" name="Nome" placeholder="Digite o nome da sua equipe:" required>
            <label class="foto" for="foto-file">
                Nenuma imagem selecionada...
                <input  type="file" id="foto-file">
            </label>
            
            <button type="submit">Cadastro</button>
        </form>

        <!-- TABELA CADASTRO DE EQUIPES -->

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Foto</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Equipe equipe in ViewBag.Equipe) {
                    <tr>
                        <td>@equipe.IdEquipe</td>
                        <td>@equipe.Nome</td>
                        <td><img class="green-play" src="~/img/Equipe/@equipe.Imagem" alt=""></td>
                        <td style="display: flex; gap: 20px">
                            <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe"><img width="30px" src="~/assets/edit.svg" alt=""></a>
                            <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>

<h1>Tela de equipes</h1>

@if (string.IsNullOrEmpty(ViewBag.UserName)) {
    <h2>Faça login para ter acesso a página</h2>
    <a asp-area="" asp-controller="Login" asp-action="Index">Fazer Login</a>
} else {
    <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" style="display:flex; gap:20px">
        <label for="">Nome</label>
        <input type="text" Name="Nome">

        <label for="">Imagem</label>
        <input type="file" name="Imagem">

        <button type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Imagem</th>
            <th>Ações</th>
        </thead>
        <tbody>
            @foreach (Equipe equipe in ViewBag.Equipe) {
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td><img src="/img/Equipe/@equipe.Imagem" alt="" width="70px" height="70px"></td>
                    <td>
                        <a style="text-decoration: none; color:black; border: 2px solid black; border-radius: 5px; padding: 4px 6px" asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">Editar</a>
                        <a style="text-decoration: none; color:black; border: 2px solid black; border-radius: 5px; padding: 4px 6px" asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
